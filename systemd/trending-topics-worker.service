[Unit]
Description=Trending Topics RabbitMQ Worker
After=network.target rabbitmq-server.service
Requires=rabbitmq-server.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/trending-topics
Environment="PATH=/opt/trending-topics/venv/bin"
EnvironmentFile=/opt/trending-topics/.env

# Run worker script
ExecStart=/opt/trending-topics/venv/bin/python /opt/trending-topics/worker.py

# Restart policy
Restart=always
RestartSec=10
StartLimitInterval=300
StartLimitBurst=5

# Logging
StandardOutput=append:/var/log/trending-topics/worker.log
StandardError=append:/var/log/trending-topics/worker-error.log

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/trending-topics

# Resource limits (worker needs more resources for ML processing)
LimitNOFILE=65536
LimitNPROC=8192
MemoryLimit=8G

[Install]
WantedBy=multi-user.target
